/**
 * CaesarCipher.java
 * Authors: Cali Stenson and Clara Smith
 * Course: Wellesley College CS230-Data Structures 
 * Semester: Fall 2013
 * This class is a CaesarCipher object used to 
 * encrypt and decrypt Caesar Ciphers
 */ 

public class CaesarCipher{
  
  public CaesarCipher(){};
  
  public String encrypt(int shiftVal, String message){
    int newIndex;
    String encrypted = "";
    message = message.toUpperCase();
    char[] messageLet = message.toCharArray();
    for(int i=0; i<message.length(); i++){
      newIndex = messageLet[i] + shiftVal;
      newIndex = ((newIndex > 'Z') ? 'A'+(newIndex - 'Z')-1: newIndex);
      encrypted += (char) newIndex;
    }
    return encrypted;
  }
  
  public String decrypt(int shiftVal, String message){
    int newIndex;
    String decrypted = "";
    message = message.toUpperCase();
    char[] messageLet = message.toCharArray();
    for(int i=0; i<message.length(); i++){
      newIndex = messageLet[i] - shiftVal;
      newIndex = ((newIndex < 'A') ? 'Z'-('A'-newIndex)+1: newIndex);
      decrypted += (char) newIndex;
    }
    return decrypted;
  }
}
  